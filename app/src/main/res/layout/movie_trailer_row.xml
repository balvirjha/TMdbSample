<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">


    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:contentDescription="Movie poster" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trailerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/aclonica"
            android:lines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:typeface="serif"
            tools:text="Default text" />

        <ImageView
            android:id="@+id/movieTrailers"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:contentDescription="Poster Image"
            android:src="@drawable/ic_play_circle_outline_white_48dp"
            android:tint="#75757d" />

        <TextView
            android:id="@+id/trailerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trailerTitle"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:fontFamily="@font/aldrich"
            android:lineSpacingExtra="3sp"
            android:lines="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="sans"
            tools:text="Default text" />

        <RelativeLayout
            android:id="@+id/dateAndRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_visibility_white_36dp" />

                <TextView
                    android:id="@+id/trailerViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09/05/2017"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/alegreya_sans_sc_thin"
                    android:textSize="18sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDislikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_thumb_down_white_36dp" />

                <TextView
                    android:id="@+id/trailerViewsDislikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sans_sc_thin"
                    android:text="09/05/2017"
                    android:textColor="@android:color/white"
                    android:typeface="sans"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_thumb_up_white_36dp" />

                <TextView
                    android:id="@+id/trailerLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U/A"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/alegreya_sans_sc_thin"
                    android:typeface="sans"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>